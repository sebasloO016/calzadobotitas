      padding: 10px;
    }

    .phone-group.is-invalid {
      border-color: #dc3545 !important;
    }
  </style>
</head>

<body>
  <button class="mobile-menu-toggle"><i class="fas fa-bars"></i></button>
  <div class="overlay"></div>

  <div class="container-fluid">
    <nav class="navbar-vertical">
      <div class="nav-header">Inventario Botitas</div>
      <ul class="nav-menu">
        <li><a href="/inventario" class="nav-link"><i class="fas fa-boxes"></i> Inventario</a></li>
        <li><a href="/compras" class="nav-link"><i class="fas fa-shopping-cart"></i> Compras</a></li>
        <li><a href="/proveedores" class="nav-link active"><i class="fas fa-truck"></i> Proveedores</a></li>
        <li><a href="/admin-dashboard" class="nav-link"><i class="fas fa-arrow-left"></i> Regresar</a></li>
      </ul>
    </nav>

    <main class="main-content">
      <img src="/imagenes/logo botitas.png" alt="Logo Botitas" class="logo">
      <h1>Nuevo Proveedor</h1>

      <% if (typeof error !=='undefined' && error) { %>
        <div class="alert">
          <i class="fas fa-exclamation-circle"></i>
          <%= error %>
        </div>
        <% } %>

          <div class="form-section">
            <h3><i class="fas fa-handshake"></i> Registro de Proveedor</h3>

            <form action="/proveedores/crear" method="POST" id="formProveedor" novalidate>
              <div class="form-grid">

                <div class="form-group">
                  <label for="nombre" class="form-label">Nombre Empresa / Proveedor *</label>
                  <input type="text" id="nombre" name="nombre" class="form-control" placeholder="Ej: Distribuidora XYZ">
                  <div class="error-message">El nombre de la empresa es obligatorio.</div>
                </div>

                <div class="form-group">
                  <label for="contacto" class="form-label">Persona de Contacto *</label>
                  <input type="text" id="contacto" name="contacto" class="form-control" placeholder="Ej: Mar√≠a L√≥pez"
                    oninput="this.value = this.value.replace(/[^a-zA-Z√°√©√≠√≥√∫√Å√â√ç√ì√ö√±√ë\s]/g, '')">
                  <div class="error-message">Este campo es obligatorio (Solo letras).</div>
                </div>

                <div class="form-group">
                  <label for="telefono" class="form-label">Tel√©fono M√≥vil *</label>
                  <div class="phone-group" id="phoneContainer">
                    <span class="phone-prefix">
                      üá™üá® +593
                    </span>
                    <input type="text" id="telefono" name="telefono" placeholder="912345678" maxlength="9"
                      oninput="this.value = this.value.replace(/\D/g, '')">
                  </div>
                  <div class="error-message" id="msgTelefono">El tel√©fono es obligatorio (9 d√≠gitos).</div>
                </div>

                <div class="form-group">
                  <label for="email" class="form-label">Correo Electr√≥nico *</label>
                  <input type="email" id="email" name="email" class="form-control" placeholder="contacto@empresa.com">
                  <div class="error-message" id="msgEmail">El correo es obligatorio.</div>
                </div>

                <div class="form-group">
                  <label for="ruc" class="form-label">RUC / Identificaci√≥n *</label>
                  <input type="text" id="ruc" name="ruc" class="form-control" placeholder="170..."
                    oninput="this.value = this.value.replace(/\D/g, '')">
                  <div class="error-message">El RUC es obligatorio.</div>
                </div>

                <div class="form-group">
                  <label for="direccion" class="form-label">Direcci√≥n *</label>
                  <input type="text" id="direccion" name="direccion" class="form-control"
                    placeholder="Ubicaci√≥n de la bodega/oficina">
                  <div class="error-message">La direcci√≥n es obligatoria.</div>
                </div>

              </div>

              <div class="btn-container">
                <a href="/proveedores" class="btn btn-secondary">
                  <i class="fas fa-times"></i> Cancelar
                </a>
                <button type="submit" class="btn btn-success">
                  <i class="fas fa-plus-circle"></i> Crear Proveedor
                </button>
              </div>
            </form>
          </div>
    </main>
  </div>

  <script>
    // --- Sidebar Logic ---
    const toggle = document.querySelector('.mobile-menu-toggle');
    const navbar = document.querySelector('.navbar-vertical');
    const overlay = document.querySelector('.overlay');

    if (toggle) { toggle.addEventListener('click', () => { navbar.classList.toggle('active'); overlay.classList.toggle('active'); }); }
    if (overlay) { overlay.addEventListener('click', () => { navbar.classList.remove('active'); overlay.classList.remove('active'); }); }

    // --- L√ìGICA DE VALIDACI√ìN COMPLETA (CAJA NEGRA) ---
    const form = document.getElementById('formProveedor');

    // Referencias a los inputs
    const nombreInput = document.getElementById('nombre');
    const contactoInput = document.getElementById('contacto');
    const phoneInput = document.getElementById('telefono');
    const phoneContainer = document.getElementById('phoneContainer');
    const emailInput = document.getElementById('email');
    const rucInput = document.getElementById('ruc');
    const direccionInput = document.getElementById('direccion');

    // Referencias a mensajes din√°micos
    const msgTelefono = document.getElementById('msgTelefono');
    const msgEmail = document.getElementById('msgEmail');

    form.addEventListener('submit', function (e) {
      let isValid = true;

      // 1. Limpiar errores visuales previos
      document.querySelectorAll('.is-invalid').forEach(el => el.classList.remove('is-invalid'));
      phoneContainer.classList.remove('is-invalid');

      // --- VALIDACIONES DE CAMPOS OBLIGATORIOS ---

      // Nombre
      if (nombreInput.value.trim() === '') {
        nombreInput.classList.add('is-invalid');
        isValid = false;
      }

      // Contacto
      if (contactoInput.value.trim() === '') {
        contactoInput.classList.add('is-invalid');
        isValid = false;
      }

      // RUC
      if (rucInput.value.trim() === '') {
        rucInput.classList.add('is-invalid');
        isValid = false;
      }

      // Direcci√≥n
      if (direccionInput.value.trim() === '') {
        direccionInput.classList.add('is-invalid');
        isValid = false;
      }

      // --- VALIDACIONES COMPLEJAS (Obligatorio + Formato) ---

      // Tel√©fono: Obligatorio Y Longitud exacta
      if (phoneInput.value.trim() === '') {
        phoneContainer.classList.add('is-invalid');
        msgTelefono.textContent = "El tel√©fono es obligatorio.";
        isValid = false;
      } else if (phoneInput.value.length < 9) {
        phoneContainer.classList.add('is-invalid');
        msgTelefono.textContent = "El tel√©fono debe tener 9 d√≠gitos exactos.";
        isValid = false;
      }

      // Email: Obligatorio Y Formato
      if (emailInput.value.trim() === '') {
        emailInput.classList.add('is-invalid');
        msgEmail.textContent = "El correo es obligatorio.";
        isValid = false;
      } else {
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        if (!emailRegex.test(emailInput.value)) {
          emailInput.classList.add('is-invalid');
          msgEmail.textContent = "Formato inv√°lido (ej: usuario@dominio.com).";
          isValid = false;
        }
      }

      // Si hay CUALQUIER error, detenemos el env√≠o
      if (!isValid) {
        e.preventDefault();
      }
    });
  </script>
</body>

</html>