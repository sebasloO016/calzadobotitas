<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard Anal√≠tico - Botitas</title>

  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

  <style>
    /* ================= ESTILOS PRO + ADN ================= */
    :root {
      --primary-color: #6a5acd;
      --secondary-color: #7b68ee;
      --background-color: #f4f6f9;
      --text-color: #334155;
      --white: #ffffff;
      --danger-color: #ef4444;
      --success-color: #10b981;
      --warning-color: #f59e0b;
      --info-color: #3b82f6;
      --border-color: #e2e8f0;
      --card-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', system-ui, sans-serif;
    }

    body {
      background-color: var(--background-color);
      color: var(--text-color);
      line-height: 1.6;
      display: flex;
      min-height: 100vh;
      margin: 0.5cm;
      position: relative;
    }

    /* ===== LAYOUT ===== */
    .container-fluid {
      display: flex;
      flex-grow: 1;
      gap: 20px;
      width: 100%;
    }

    /* ===== SIDEBAR & NAV ===== */
    .mobile-menu-toggle {
      display: none;
      position: fixed;
      top: 15px;
      right: 15px;
      z-index: 1000;
      background: var(--primary-color);
      border: none;
      color: var(--white);
      width: 40px;
      height: 40px;
      border-radius: 50%;
      cursor: pointer;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
      transition: transform 0.2s;
    }

    .mobile-menu-toggle:hover {
      transform: scale(1.05);
    }

    .overlay {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0, 0, 0, 0.5);
      z-index: 998;
      backdrop-filter: blur(2px);
    }

    .navbar-vertical {
      background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
      width: 230px;
      padding: 20px;
      color: var(--white);
      display: flex;
      flex-direction: column;
      border-radius: 12px;
      transition: all 0.3s ease;
      z-index: 999;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      height: fit-content;
      min-height: 80vh;
    }

    .nav-header {
      text-align: center;
      font-size: 1.4em;
      margin-bottom: 25px;
      font-weight: bold;
      letter-spacing: 0.5px;
    }

    .nav-menu {
      list-style: none;
      flex-grow: 1;
    }

    .nav-link {
      display: flex;
      align-items: center;
      color: var(--white);
      text-decoration: none;
      padding: 12px 15px;
      margin-bottom: 10px;
      border-radius: 8px;
      background-color: rgba(255, 255, 255, 0.1);
      transition: all 0.3s ease;
      font-size: 0.95em;
    }

    .nav-link i {
      margin-right: 12px;
      width: 22px;
      text-align: center;
      font-size: 1.1em;
    }

    .nav-link:hover {
      background-color: rgba(255, 255, 255, 0.2);
      transform: translateX(5px);
    }

    .nav-link.active {
      background-color: rgba(255, 255, 255, 0.3);
      font-weight: 600;
      border-left: 4px solid #fff;
    }

    /* ===== MAIN CONTENT ===== */
    .main-content {
      flex-grow: 1;
      background-color: var(--white);
      border-radius: 15px;
      padding: 30px;
      overflow-x: hidden;
      width: 100%;
      box-shadow: 0 15px 40px rgba(0, 0, 0, .05);
    }

    .logo {
      max-width: 150px;
      display: block;
      margin: 0 auto 15px;
    }

    .dashboard-header {
      margin-bottom: 30px;
      text-align: center;
    }

    .dashboard-header h1 {
      color: var(--primary-color);
      margin-bottom: 10px;
      font-size: 1.8rem;
    }

    .dashboard-header p {
      color: #64748b;
      font-size: 0.95rem;
    }

    /* ===== FILTROS ===== */
    .filter-bar {
      background: #f8fafc;
      border: 1px solid var(--border-color);
      padding: 20px;
      border-radius: 12px;
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
      align-items: flex-end;
      margin-bottom: 30px;
      justify-content: space-between;
    }

    .filter-inputs {
      display: flex;
      gap: 15px;
      flex-wrap: wrap;
    }

    .input-group label {
      display: block;
      font-size: 0.8rem;
      font-weight: 700;
      color: #64748b;
      margin-bottom: 5px;
    }

    .input-group input {
      padding: 10px;
      border-radius: 8px;
      border: 1px solid #cbd5e1;
      font-size: 0.9rem;
      background: white;
    }

    .filter-actions {
      display: flex;
      gap: 10px;
      flex-wrap: wrap;
    }

    .btn {
      padding: 10px 16px;
      border-radius: 8px;
      border: none;
      font-weight: 600;
      cursor: pointer;
      font-size: 0.9rem;
      display: inline-flex;
      align-items: center;
      gap: 6px;
      transition: all 0.2s;
    }

    .btn-primary {
      background: var(--primary-color);
      color: white;
    }

    .btn-primary:hover {
      background: var(--secondary-color);
      transform: translateY(-2px);
    }

    .btn-secondary {
      background: white;
      border: 1px solid #cbd5e1;
      color: #475569;
    }

    .btn-secondary:hover {
      background: #f1f5f9;
    }

    /* ===== KPI GRID ===== */
    .kpi-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
      margin-bottom: 30px;
    }

    .kpi-card {
      background: white;
      border-radius: 12px;
      padding: 20px;
      box-shadow: var(--card-shadow);
      border: 1px solid var(--border-color);
      display: flex;
      align-items: center;
      gap: 15px;
      transition: transform 0.2s;
    }

    .kpi-card:hover {
      transform: translateY(-3px);
      border-color: var(--primary-color);
    }

    .kpi-icon {
      width: 50px;
      height: 50px;
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.2rem;
      color: white;
      flex-shrink: 0;
    }

    .kpi-content h5 {
      margin: 0;
      font-size: 0.8rem;
      color: #64748b;
      text-transform: uppercase;
    }

    .kpi-content p {
      margin: 5px 0 0;
      font-size: 1.3rem;
      font-weight: 800;
      color: var(--text-color);
    }

    .icon-sales {
      background: linear-gradient(135deg, #6a5acd, #7b68ee);
    }

    .icon-profit {
      background: linear-gradient(135deg, #10b981, #34d399);
    }

    .icon-warn {
      background: linear-gradient(135deg, #f59e0b, #fbbf24);
    }

    .icon-info {
      background: linear-gradient(135deg, #3b82f6, #60a5fa);
    }

    /* ===== CHARTS LAYOUT ===== */
    .charts-wrapper {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(450px, 1fr));
      gap: 25px;
    }

    .chart-box {
      background: white;
      border-radius: 12px;
      padding: 20px;
      border: 1px solid var(--border-color);
      box-shadow: var(--card-shadow);
      display: flex;
      flex-direction: column;
    }

    .chart-box h4 {
      margin: 0 0 15px;
      font-size: 1.1rem;
      color: var(--text-color);
      border-bottom: 1px solid #f1f5f9;
      padding-bottom: 10px;
    }

    .canvas-container {
      position: relative;
      height: 300px;
      width: 100%;
    }

    /* Comparador Interactivo */
    .comparator-controls {
      display: flex;
      gap: 10px;
      flex-wrap: wrap;
      margin-bottom: 15px;
      background: #f8fafc;
      padding: 15px;
      border-radius: 8px;
    }

    @media (max-width: 768px) {
      body {
        margin: 0.2cm;
      }

      .container-fluid {
        flex-direction: column;
      }

      .mobile-menu-toggle {
        display: block;
      }

      .navbar-vertical {
        position: fixed;
        left: -260px;
        top: 0;
        bottom: 0;
        margin: 10px;
        height: calc(100vh - 20px);
        overflow-y: auto;
      }

      .navbar-vertical.active {
        left: 0;
      }

      .overlay.active {
        display: block;
      }

      .main-content {
        margin-top: 50px;
        padding: 15px;
      }

      .charts-wrapper {
        grid-template-columns: 1fr;
      }

      .canvas-container {
        height: 250px;
      }
    }
  </style>
</head>

<body>
  <button class="mobile-menu-toggle"><i class="fas fa-bars"></i></button>
  <div class="overlay"></div>

  <div class="container-fluid">
    <nav class="navbar-vertical">
      <div class="nav-header">Inventario Botitas</div>
      <ul class="nav-menu">
        <li><a href="/admin-dashboard" class="nav-link active"><i class="fas fa-home"></i> HOME</a></li>
        <li><a href="/ventas/nueva" class="nav-link"><i class="fas fa-cash-register"></i> Nueva Venta</a></li>
        <li><a href="/inventario" class="nav-link"><i class="fas fa-box"></i> Inventario</a></li>
        <li><a href="/clientes" class="nav-link"><i class="fas fa-users"></i> Clientes</a></li>
        <li><a href="/proveedores" class="nav-link"><i class="fas fa-truck"></i> Proveedores</a></li>
        <li><a href="/ventas/historial" class="nav-link"><i class="fas fa-list-alt"></i> Historial</a></li>
        <li><a href="/reportes" class="nav-link"><i class="fas fa-chart-line"></i> Reportes</a></li>
        <li><a href="/admin-dashboard" class="nav-link"><i class="fas fa-arrow-left"></i> Regresar</a></li>
      </ul>
    </nav>

    <main class="main-content">

      <div class="dashboard-header">
        <img src="/imagenes/logo botitas.png" class="logo" alt="Logo Botitas">
        <h1>Dashboard Anal√≠tico</h1>
        <p>Inteligencia de negocios en tiempo real.</p>
      </div>

      <div class="filter-bar">
        <div class="filter-inputs">
          <div class="input-group">
            <label>Desde</label>
            <input type="date" id="inicio">
          </div>
          <div class="input-group">
            <label>Hasta</label>
            <input type="date" id="fin">
          </div>
        </div>
        <div class="filter-actions">
          <button id="aplicar" class="btn btn-primary"><i class="fas fa-filter"></i> Filtrar</button>
          <button id="reset" class="btn btn-secondary"><i class="fas fa-sync"></i> Reset</button>
        </div>
      </div>

      <section class="kpi-grid">
        <div class="kpi-card">
          <div class="kpi-icon icon-sales"><i class="fas fa-dollar-sign"></i></div>
          <div class="kpi-content">
            <h5>Ventas Totales</h5>
            <p id="ventasTotales">$0.00</p>
          </div>
        </div>
        <div class="kpi-card">
          <div class="kpi-icon icon-profit"><i class="fas fa-chart-line"></i></div>
          <div class="kpi-content">
            <h5>Ganancia Bruta</h5>
            <p id="gananciaBruta">$0.00</p>
          </div>
        </div>
        <div class="kpi-card">
          <div class="kpi-icon icon-warn"><i class="fas fa-receipt"></i></div>
          <div class="kpi-content">
            <h5>Ticket Promedio</h5>
            <p id="ticketPromedio">$0.00</p>
          </div>
        </div>
        <div class="kpi-card">
          <div class="kpi-icon icon-info"><i class="fas fa-box-open"></i></div>
          <div class="kpi-content">
            <h5>Und. Vendidas</h5>
            <p id="unidadesVendidas">0</p>
          </div>
        </div>
      </section>

      <section class="charts-wrapper">

        <div class="chart-box">
          <h4><i class="fas fa-chart-area"></i> Tendencia de Ventas</h4>
          <div class="canvas-container">
            <canvas id="ventasMes"></canvas>
          </div>
        </div>

        <div class="chart-box">
          <h4><i class="fas fa-tags"></i> Ventas vs Categor√≠a</h4>
          <div class="canvas-container">
            <canvas id="ventasCategoria"></canvas>
          </div>
        </div>

        <div class="chart-box" style="grid-column: 1 / -1;">
          <h4><i class="fas fa-balance-scale"></i> Eficiencia de Inventario (Ventas vs Stock Actual)</h4>
          <p style="font-size:0.85rem; color:#64748b; margin-bottom:10px;">
            <span style="color:#6a5acd;">‚óè Barras: Ventas Hist√≥ricas ($)</span> |
            <span style="color:#ef4444;">‚óè L√≠nea: Unidades en Stock</span> (Detecta sobre-stock o desabastecimiento)
          </p>
          <div class="canvas-container">
            <canvas id="eficienciaInventario"></canvas>
          </div>
        </div>

        <div class="chart-box">
          <h4><i class="fas fa-map-marked-alt"></i> Ticket Promedio por Ciudad</h4>
          <div class="canvas-container">
            <canvas id="ticketCiudad"></canvas>
          </div>
        </div>

        <div class="chart-box">
          <h4><i class="fas fa-credit-card"></i> Formas de Pago</h4>
          <div class="canvas-container">
            <canvas id="formasPago"></canvas>
          </div>
        </div>

        <div class="chart-box">
          <h4><i class="fas fa-trophy"></i> Top 5 Best Sellers</h4>
          <div class="canvas-container">
            <canvas id="topProductos"></canvas>
          </div>
        </div>

        <div class="chart-box">
          <h4><i class="fas fa-chart-pie"></i> Share de Ventas (Top Prod.)</h4>
          <div class="canvas-container">
            <canvas id="paretoProductos"></canvas>
          </div>
        </div>

        <div class="chart-box" style="grid-column: 1 / -1;">
          <h4><i class="fas fa-exchange-alt"></i> Comparador de Periodos</h4>
          <div class="comparator-controls">
            <div class="input-group"><label>Periodo A (Inicio)</label><input type="date" id="inicioA"></div>
            <div class="input-group"><label>Periodo A (Fin)</label><input type="date" id="finA"></div>
            <div class="input-group"><label>Periodo B (Inicio)</label><input type="date" id="inicioB"></div>
            <div class="input-group"><label>Periodo B (Fin)</label><input type="date" id="finB"></div>
            <div style="align-self:flex-end;"><button id="btnComparar" class="btn btn-primary">Comparar</button></div>
          </div>
          <div class="canvas-container" style="height: 350px;">
            <canvas id="comparativoInteractivo"></canvas>
          </div>
        </div>

      </section>
    </main>
  </div>

  <script>
    // Sidebar Logic
    const menuToggle = document.querySelector('.mobile-menu-toggle');
    const sidebar = document.querySelector('.navbar-vertical');
    const overlay = document.querySelector('.overlay');

    menuToggle.addEventListener('click', () => {
      sidebar.classList.toggle('active');
      overlay.classList.toggle('active');
    });

    overlay.addEventListener('click', () => {
      sidebar.classList.remove('active');
      overlay.classList.remove('active');
    });

    // Configuraci√≥n Global Chart.js
    Chart.defaults.font.family = "'Segoe UI', system-ui, sans-serif";
    Chart.defaults.color = '#64748b';

    let charts = [], comparativoChart = null;

    const crearChart = (id, tipo, configData, options = {}) => {
      const ctx = document.getElementById(id);
      if (!ctx) return;
      const existing = Chart.getChart(id);
      if (existing) existing.destroy();

      return new Chart(ctx, {
        type: tipo,
        data: configData,
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: { legend: { position: 'bottom' } },
          scales: (tipo !== 'doughnut' && tipo !== 'polarArea') ? {
            y: { beginAtZero: true, grid: { color: '#f1f5f9' } },
            x: { grid: { display: false } },
            ...options.scales
          } : {}
        }
      });
    };

    async function cargarDashboard(inicio = '', fin = '') {
      const btn = $('#aplicar');
      btn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> ...');

      try {
        const url = inicio && fin ? `/reportes/general?inicio=${inicio}&fin=${fin}` : '/reportes/general';
        const data = await $.getJSON(url);

        if (data.kpi) {
          $('#ventasTotales').text(`$${data.kpi.ventasTotales}`);
          $('#gananciaBruta').text(`$${data.kpi.gananciaBruta}`);
          $('#ticketPromedio').text(`$${data.kpi.ticketPromedio}`);
          $('#unidadesVendidas').text(data.kpi.unidadesVendidas);
        }

        // 1. Gr√°ficos Base
        crearChart('ventasMes', 'line', {
          labels: data.ventasPorMes.labels,
          datasets: [{ label: 'Ventas ($)', data: data.ventasPorMes.valores, borderColor: '#6a5acd', backgroundColor: 'rgba(106,90,205,0.1)', fill: true, tension: 0.3 }]
        });

        crearChart('ventasCategoria', 'bar', {
          labels: data.ventasPorCategoria.labels,
          datasets: [{ label: 'Ventas ($)', data: data.ventasPorCategoria.valores, backgroundColor: '#7b68ee', borderRadius: 5 }]
        });

        crearChart('formasPago', 'doughnut', {
          labels: data.formasDePago.labels,
          datasets: [{ data: data.formasDePago.valores, backgroundColor: ['#6a5acd', '#34d399', '#fbbf24', '#f472b6'] }]
        });

        crearChart('topProductos', 'bar', {
          labels: data.topProductos.labels,
          datasets: [{ label: 'Unidades', data: data.topProductos.valores, backgroundColor: '#34d399', borderRadius: 5 }]
        }, { indexAxis: 'y' }); // Barras horizontales

        // 2. Gr√°ficos Calculados (Frontend Engineering)

        // A) Ticket Promedio por Ciudad
        if (data.ventasPorCiudad && data.ventasPorCiudad.valores) {
          const ciudades = data.ventasPorCiudad.labels;
          const tickets = data.ventasPorCiudad.valores.map(v => v.cantidadVentas > 0 ? (v.total / v.cantidadVentas).toFixed(2) : 0);
          crearChart('ticketCiudad', 'bar', {
            labels: ciudades,
            datasets: [{ label: 'Ticket Promedio ($)', data: tickets, backgroundColor: '#f59e0b', borderRadius: 5 }]
          });
        }

        // B) Share de Best Sellers
        if (data.topProductos && data.topProductos.valores) {
          crearChart('paretoProductos', 'polarArea', {
            labels: data.topProductos.labels,
            datasets: [{ data: data.topProductos.valores, backgroundColor: ['#6a5acd90', '#7b68ee90', '#34d39990', '#fbbf2490', '#f472b690'] }]
          });
        }

        // C) üåü EFICIENCIA DE INVENTARIO (Combinado)
        if (data.ventasPorCategoria && data.stockPorCategoria) {
          // Normalizar etiquetas para asegurar coincidencia
          const categorias = data.ventasPorCategoria.labels;
          const stockData = [];

          // Mapeo simple (asumiendo orden similar, idealmente cruzar por ID si el backend lo permite)
          // Si no coinciden exactamente, usamos el array de stock directo si tiene misma longitud
          const stockSource = data.stockPorCategoria.valores;

          crearChart('eficienciaInventario', 'bar', {
            labels: categorias,
            datasets: [
              {
                type: 'bar',
                label: 'Ventas ($)',
                data: data.ventasPorCategoria.valores,
                backgroundColor: 'rgba(106, 90, 205, 0.6)',
                order: 2
              },
              {
                type: 'line',
                label: 'Stock (Unidades)',
                data: stockSource, // Usamos datos de stock
                borderColor: '#ef4444',
                borderWidth: 2,
                tension: 0.3,
                pointBackgroundColor: '#fff',
                pointBorderColor: '#ef4444',
                yAxisID: 'y1', // Eje secundario
                order: 1
              }
            ]
          }, {
            scales: {
              y: { title: { display: true, text: 'Ventas ($)' } },
              y1: {
                type: 'linear', display: true, position: 'right',
                title: { display: true, text: 'Stock (U)' },
                grid: { drawOnChartArea: false } // Limpiar rejilla
              }
            }
          });
        }

      } catch (error) { console.error(error); }
      finally { btn.prop('disabled', false).html('<i class="fas fa-filter"></i> Filtrar'); }
    }

    // Eventos
    $('#aplicar').click(() => cargarDashboard($('#inicio').val(), $('#fin').val()));
    $('#reset').click(() => { $('#inicio').val(''); $('#fin').val(''); cargarDashboard(); });

    // Comparador
    $('#btnComparar').click(async () => {
      const a1 = $('#inicioA').val(), a2 = $('#finA').val(), b1 = $('#inicioB').val(), b2 = $('#finB').val();
      if (!a1 || !a2 || !b1 || !b2) return alert('Completa las fechas.');

      try {
        const res = await $.getJSON(`/reportes/comparar?inicioA=${a1}&finA=${a2}&inicioB=${b1}&finB=${b2}`);
        const ctx = document.getElementById('comparativoInteractivo');
        if (comparativoChart) comparativoChart.destroy();

        comparativoChart = new Chart(ctx, {
          type: 'bar',
          data: {
            labels: res.map(r => r.periodo),
            datasets: [{ label: 'Ventas ($)', data: res.map(r => r.total), backgroundColor: ['#6a5acd', '#10b981'], borderRadius: 8 }]
          },
          options: { responsive: true, maintainAspectRatio: false, plugins: { legend: { display: false } } }
        });
      } catch (err) { alert('Error al comparar.'); }
    });

    $(document).ready(() => cargarDashboard());
  </script>
</body>

</html>