<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Producto - Botitas</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <style>
        /* ================= ESTILOS PRO + ADN ================= */
        :root {
            --primary-color: #6a5acd;
            --secondary-color: #7b68ee;
            --background-color: #f4f6f9;
            --text-color: #334155;
            --white: #ffffff;
            --danger-color: #ef4444;
            --success-color: #10b981;
            --border-color: #e2e8f0;
            --input-bg: #f8fafc;
            --card-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', system-ui, sans-serif;
        }

        body {
            background-color: var(--background-color);
            color: var(--text-color);
            line-height: 1.6;
            display: flex;
            min-height: 100vh;
            margin: 0.5cm;
            position: relative;
        }

        /* ===== LAYOUT ===== */
        .container-fluid {
            display: flex;
            flex-grow: 1;
            gap: 20px;
            width: 100%;
        }

        /* ===== SIDEBAR & NAV ===== */
        .mobile-menu-toggle {
            display: none;
            position: fixed;
            top: 15px;
            right: 15px;
            z-index: 1000;
            background: var(--primary-color);
            border: none;
            color: var(--white);
            width: 40px;
            height: 40px;
            border-radius: 50%;
            cursor: pointer;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            transition: transform 0.2s;
        }

        .mobile-menu-toggle:hover {
            transform: scale(1.05);
        }

        .overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.5);
            z-index: 998;
            backdrop-filter: blur(2px);
        }

        .navbar-vertical {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            width: 230px;
            padding: 20px;
            color: var(--white);
            display: flex;
            flex-direction: column;
            border-radius: 12px;
            transition: all 0.3s ease;
            z-index: 999;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            height: 100%;
            min-height: 80vh;
        }

        .nav-header {
            text-align: center;
            font-size: 1.4em;
            margin-bottom: 25px;
            font-weight: bold;
            letter-spacing: 0.5px;
        }

        .nav-menu {
            list-style: none;
            flex-grow: 1;
        }

        .nav-link {
            display: flex;
            align-items: center;
            color: var(--white);
            text-decoration: none;
            padding: 12px 15px;
            margin-bottom: 10px;
            border-radius: 8px;
            background-color: rgba(255, 255, 255, 0.1);
            transition: all 0.3s ease;
            font-size: 0.95em;
        }

        .nav-link i {
            margin-right: 12px;
            width: 22px;
            text-align: center;
            font-size: 1.1em;
        }

        .nav-link:hover {
            background-color: rgba(255, 255, 255, 0.2);
            transform: translateX(5px);
        }

        .nav-link.active {
            background-color: rgba(255, 255, 255, 0.3);
            font-weight: 600;
            border-left: 4px solid #fff;
        }

        /* ===== MAIN CONTENT ===== */
        .main-content {
            flex-grow: 1;
            background-color: var(--white);
            border-radius: 15px;
            padding: 40px;
            overflow-x: hidden;
            width: 100%;
            box-shadow: 0 15px 40px rgba(0, 0, 0, .05);
        }

        .logo {
            max-width: 150px;
            display: block;
            margin: 0 auto 20px;
        }

        h1 {
            color: var(--primary-color);
            margin-bottom: 30px;
            font-size: 1.8rem;
            text-align: center;
            border-bottom: 2px solid #f1f5f9;
            padding-bottom: 15px;
        }

        /* ===== FORMULARIO PRO ===== */
        .form-section {
            background: #fff;
            margin-bottom: 30px;
            animation: fadeIn 0.3s ease;
        }

        .form-section h3 {
            font-size: 1.1rem;
            color: var(--text-color);
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
            border-left: 4px solid var(--primary-color);
            padding-left: 10px;
        }

        .form-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 20px;
        }

        .form-group {
            margin-bottom: 5px;
        }

        .form-label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            font-size: 0.9rem;
            color: #475569;
        }

        .form-control {
            width: 100%;
            padding: 12px;
            border: 1px solid #cbd5e1;
            border-radius: 10px;
            background: var(--input-bg);
            font-size: 0.95rem;
            transition: all 0.3s;
        }

        .form-control:focus {
            background: #fff;
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(106, 90, 205, 0.15);
            outline: none;
        }

        .form-control[readonly] {
            background-color: #e2e8f0;
            color: #64748b;
            cursor: not-allowed;
        }

        textarea.form-control {
            resize: vertical;
            min-height: 80px;
        }

        /* ===== SECCIÓN VARIANTES (Card Style) ===== */
        .variantes-container {
            background: #f8fafc;
            border: 1px solid var(--border-color);
            border-radius: 12px;
            padding: 20px;
        }

        .talla-group {
            display: grid;
            grid-template-columns: 1fr 1fr 1fr auto;
            gap: 15px;
            align-items: center;
            background: white;
            padding: 15px;
            border-radius: 10px;
            border: 1px solid #e2e8f0;
            margin-bottom: 10px;
            transition: transform 0.2s, box-shadow 0.2s;
        }

        .talla-group:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.03);
            border-color: var(--secondary-color);
        }

        /* ===== IMAGEN PREVIEW ===== */
        .image-preview-box {
            text-align: center;
            padding: 20px;
            background: #f8fafc;
            border-radius: 12px;
            border: 1px dashed #cbd5e1;
            margin-bottom: 15px;
        }

        .current-img {
            max-width: 150px;
            max-height: 150px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin-bottom: 10px;
        }

        /* ===== BOTONES ===== */
        .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            padding: 12px 24px;
            border-radius: 10px;
            font-weight: 600;
            border: none;
            cursor: pointer;
            transition: all 0.2s;
            font-size: 1rem;
        }

        .btn-success {
            background: linear-gradient(135deg, var(--success-color), #059669);
            color: white;
            box-shadow: 0 4px 6px rgba(16, 185, 129, 0.2);
        }

        .btn-success:hover {
            transform: translateY(-2px);
            opacity: 0.95;
        }

        .btn-add {
            background: var(--primary-color);
            color: white;
            padding: 10px 20px;
            font-size: 0.9rem;
            margin-top: 10px;
        }

        .btn-add:hover {
            background: var(--secondary-color);
        }

        .btn-remove {
            background: #fee2e2;
            color: #ef4444;
            padding: 10px;
            border-radius: 8px;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .btn-remove:hover {
            background: #fecaca;
            color: #b91c1c;
        }

        /* Alert */
        .alert {
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 25px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .alert-danger {
            background: #fee2e2;
            color: #991b1b;
            border: 1px solid #fecaca;
        }

        /* Buscador Nav */
        .nav-search {
            padding: 0 20px 20px;
            display: flex;
            gap: 5px;
        }

        .nav-search input {
            width: 100%;
            padding: 8px 12px;
            border-radius: 6px;
            border: none;
            background: rgba(255, 255, 255, 0.2);
            color: white;
        }

        .nav-search input::placeholder {
            color: rgba(255, 255, 255, 0.7);
        }

        .nav-search button {
            padding: 6px 10px;
            background: rgba(255, 255, 255, 0.3);
            border: none;
            color: white;
            border-radius: 6px;
            cursor: pointer;
        }

        .nav-search button:hover {
            background: rgba(255, 255, 255, 0.4);
        }

        /* Responsive */
        @media (max-width: 768px) {
            body {
                margin: 0.2cm;
            }

            .container-fluid {
                flex-direction: column;
            }

            .mobile-menu-toggle {
                display: block;
            }

            .navbar-vertical {
                position: fixed;
                left: -260px;
                top: 0;
                bottom: 0;
                margin: 10px;
                height: calc(100vh - 20px);
                overflow-y: auto;
            }

            .navbar-vertical.active {
                left: 0;
            }

            .overlay.active {
                display: block;
            }

            .main-content {
                margin-top: 50px;
                padding: 20px;
            }

            .talla-group {
                grid-template-columns: 1fr;
                gap: 10px;
            }

            .btn-remove {
                width: 100%;
                margin-top: 5px;
            }
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>

<body>
    <button class="mobile-menu-toggle"><i class="fas fa-bars"></i></button>
    <div class="overlay"></div>

    <div class="container-fluid">
        <nav class="navbar-vertical">
            <div class="nav-header">Inventario Botitas</div>
            <ul class="nav-menu">
                <li><a href="/inventario/agregar" class="nav-link"><i class="fas fa-box-open"></i> Re-stock Producto</a>
                </li>
                <li><a href="/crearProducto/verTodos" class="nav-link"><i class="fas fa-list"></i> Ver Productos</a>
                </li>
                <li><a href="/crearProducto/crear" class="nav-link"><i class="fas fa-plus"></i> Crear Producto</a></li>
                <li><a href="/stock" class="nav-link"><i class="fas fa-barcode"></i> Buscar por Código</a></li>
                <li><a href="/inventario" class="nav-link active"><i class="fas fa-clipboard-list"></i> Ver
                        Inventario</a></li>
                <li><a href="/admin-dashboard" class="nav-link"><i class="fas fa-arrow-left"></i> Regresar</a></li>
            </ul>

            <form class="nav-search" action="/crearProducto/buscar" method="GET">
                <input type="search" placeholder="Buscar..." name="query">
                <button type="submit"><i class="fas fa-search"></i></button>
            </form>
        </nav>

        <main class="main-content">
            <img src="/imagenes/logo botitas.png" alt="Logo Botitas" class="logo">
            <h1>Editar Producto: <span style="font-weight: 300;">
                    <%= producto.Nombre %>
                </span></h1>

            <% if (error) { %>
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-triangle"></i>
                    <%= error %>
                </div>
                <% } %>

                    <form id="productoForm" action="/crearProducto/editar/<%= producto.Codigo %>" method="POST"
                        enctype="multipart/form-data">

                        <div class="form-section">
                            <h3><i class="fas fa-info-circle"></i> Datos Generales</h3>
                            <div class="form-grid">
                                <div class="form-group">
                                    <label class="form-label">Código (No editable)</label>
                                    <input type="text" class="form-control" name="Codigo" value="<%= producto.Codigo %>"
                                        readonly>
                                </div>

                                <div class="form-group">
                                    <label class="form-label">Nombre del Producto</label>
                                    <input type="text" class="form-control" name="Nombre" value="<%= producto.Nombre %>"
                                        required>
                                </div>

                                <div class="form-group">
                                    <label class="form-label">Tipo</label>
                                    <select class="form-control" name="TipoID" required>
                                        <option value="">Seleccione...</option>
                                        <% tipos.forEach(tipo=> { %>
                                            <option value="<%= tipo.TipoID %>" <%=tipo.TipoID==producto.TipoID
                                                ? 'selected' : '' %>>
                                                <%= tipo.Nombre %>
                                            </option>
                                            <% }) %>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label class="form-label">Género</label>
                                    <select class="form-control" name="GeneroID" required>
                                        <option value="">Seleccione...</option>
                                        <% generos.forEach(genero=> { %>
                                            <option value="<%= genero.GeneroID %>" <%=genero.GeneroID==producto.GeneroID
                                                ? 'selected' : '' %>>
                                                <%= genero.Nombre %>
                                            </option>
                                            <% }) %>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label class="form-label">Material</label>
                                    <select class="form-control" name="MaterialID" required>
                                        <option value="">Seleccione...</option>
                                        <% materiales.forEach(material=> { %>
                                            <option value="<%= material.MaterialID %>"
                                                <%=material.MaterialID==producto.MaterialID ? 'selected' : '' %>>
                                                <%= material.Nombre %>
                                            </option>
                                            <% }) %>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label class="form-label">Color (No editable)</label>
                                    <select class="form-control" disabled>
                                        <% colores.forEach(color=> { %>
                                            <option value="<%= color.ColorID %>" <%=color.ColorID==producto.ColorID
                                                ? 'selected' : '' %>>
                                                <%= color.Nombre %>
                                            </option>
                                            <% }) %>
                                    </select>
                                    <input type="hidden" name="ColorID" value="<%= producto.ColorID %>">
                                </div>
                            </div>
                        </div>

                        <div class="form-section">
                            <h3><i class="fas fa-layer-group"></i> Gestión de Variantes</h3>
                            <div class="variantes-container">
                                <small style="display:block; color:#64748b; margin-bottom:15px;">
                                    <i class="fas fa-edit"></i> Ajusta el stock, cambia la ubicación o elimina tallas.
                                </small>

                                <div id="tallasContainer">
                                    <% if (variantes && variantes.length> 0) { %>
                                        <% variantes.forEach(variante=> { %>
                                            <div class="talla-group">
                                                <select class="form-control" name="TallaID[]" required>
                                                    <option value="">Talla</option>
                                                    <% tallas.forEach(talla=> { %>
                                                        <option value="<%= talla.TallaID %>"
                                                            <%=talla.TallaID==variante.TallaID ? 'selected' : '' %>>
                                                            <%= talla.Valor %>
                                                        </option>
                                                        <% }) %>
                                                </select>

                                                <input type="number" class="form-control" name="Cantidad[]"
                                                    value="<%= variante.Stock %>" placeholder="Stock" min="0" required>

                                                <select class="form-control" name="UbicacionID[]" required>
                                                    <option value="">Ubicación</option>
                                                    <% ubicaciones.forEach(ubicacion=> { %>
                                                        <option value="<%= ubicacion.UbicacionID %>"
                                                            <%=ubicacion.UbicacionID==variante.UbicacionID ? 'selected'
                                                            : '' %>>
                                                            <%= ubicacion.Nombre %>
                                                        </option>
                                                        <% }) %>
                                                </select>

                                                <button type="button" class="btn btn-remove" onclick="removeTalla(this)"
                                                    title="Eliminar Variante">
                                                    <i class="fas fa-trash-alt"></i>
                                                </button>
                                            </div>
                                            <% }) %>
                                                <% } else { %>
                                                    <p style="text-align: center; color: #94a3b8; font-style: italic;">
                                                        No hay variantes registradas. Agrega una abajo.</p>
                                                    <% } %>
                                </div>

                                <button type="button" class="btn btn-add" onclick="addTalla()">
                                    <i class="fas fa-plus"></i> Agregar Nueva Talla
                                </button>
                            </div>
                        </div>

                        <div class="form-section">
                            <h3><i class="fas fa-tag"></i> Precios y Detalles</h3>

                            <div class="form-grid">
                                <div class="form-group">
                                    <label class="form-label">Precio Costo ($)</label>
                                    <input type="number" step="0.01" class="form-control" name="PrecioCosto"
                                        value="<%= producto.PrecioCosto %>" required>
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Precio Venta ($)</label>
                                    <input type="number" step="0.01" class="form-control" name="PrecioVenta"
                                        value="<%= producto.PrecioVenta %>" required>
                                </div>
                            </div>

                            <div class="form-group" style="margin-top: 15px;">
                                <label class="form-label">Descripción / Detalles</label>
                                <textarea class="form-control" name="Detalle"
                                    placeholder="Detalles adicionales..."><%= producto.Detalle || '' %></textarea>
                            </div>

                            <div class="form-group" style="margin-top: 20px;">
                                <label class="form-label">Imagen del Producto</label>
                                <div class="image-preview-box">
                                    <% if (producto.Foto) { %>
                                        <img src="<%= producto.Foto %>" class="current-img" alt="Foto Actual">
                                        <p style="font-size: 0.85rem; color: #64748b;">Imagen Actual</p>
                                        <% } else { %>
                                            <div style="font-size: 3rem; color: #cbd5e1; margin-bottom: 10px;"><i
                                                    class="fas fa-image"></i></div>
                                            <p style="font-size: 0.85rem; color: #64748b;">Sin imagen asignada</p>
                                            <% } %>

                                                <input type="file" class="form-control" name="FotoFile" accept="image/*"
                                                    style="margin-bottom: 10px;">
                                                <div style="font-size: 0.9rem; color: #94a3b8; margin: 5px 0;">— O —
                                                </div>
                                                <input type="text" class="form-control" name="Foto"
                                                    placeholder="Pegar URL de imagen nueva"
                                                    value="<%= producto.Foto || '' %>">
                                </div>
                            </div>
                        </div>

                        <div style="text-align: center; margin-top: 40px;">
                            <button type="submit" class="btn btn-success"
                                style="width: 100%; max-width: 400px; padding: 15px; font-size: 1.1rem;">
                                <i class="fas fa-save"></i> GUARDAR CAMBIOS
                            </button>
                        </div>

                    </form>
        </main>
    </div>

    <script>
        // --- Sidebar Logic ---
        const menuToggle = document.querySelector('.mobile-menu-toggle');
        const sidebar = document.querySelector('.navbar-vertical');
        const overlay = document.querySelector('.overlay');

        menuToggle.addEventListener('click', () => {
            sidebar.classList.toggle('active');
            overlay.classList.toggle('active');
        });

        overlay.addEventListener('click', () => {
            sidebar.classList.remove('active');
            overlay.classList.remove('active');
        });

        // --- Variantes Dinámicas ---
        function addTalla() {
            const container = document.getElementById('tallasContainer');
            const tallaGroup = document.createElement('div');
            tallaGroup.className = 'talla-group';
            tallaGroup.style.animation = 'fadeIn 0.3s ease'; // Animación suave

            // Usamos EJS en el string JS para popular los selects dinámicamente
            tallaGroup.innerHTML = `
                <select class="form-control" name="TallaID[]" required>
                    <option value="">Seleccione Talla</option>
                    <% tallas.forEach(talla => { %>
                        <option value="<%= talla.TallaID %>"><%= talla.Valor %></option>
                    <% }) %>
                </select>
                <input type="number" class="form-control" name="Cantidad[]" placeholder="Stock" min="0" required>
                <select class="form-control" name="UbicacionID[]" required>
                    <option value="">Seleccione Ubicación</option>
                    <% ubicaciones.forEach(ubicacion => { %>
                        <option value="<%= ubicacion.UbicacionID %>"><%= ubicacion.Nombre %></option>
                    <% }) %>
                </select>
                <button type="button" class="btn btn-remove" onclick="removeTalla(this)" title="Eliminar fila">
                    <i class="fas fa-trash-alt"></i>
                </button>
            `;
            container.appendChild(tallaGroup);
        }

        function removeTalla(button) {
            const container = document.getElementById('tallasContainer');
            // Permitimos eliminar incluso si queda 1, porque podría querer dejar sin stock temporalmente, 
            // aunque idealmente debería haber al menos una variante.
            const group = button.parentElement;
            group.style.opacity = '0';
            setTimeout(() => group.remove(), 200);
        }
    </script>
</body>

</html>