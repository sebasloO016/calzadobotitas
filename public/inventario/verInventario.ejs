<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inventario General - Botitas</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <style>
        /* ================= ESTILOS PRO + ADN ================= */
        :root {
            --primary: #6a5acd;
            --secondary: #7b68ee;
            --bg: #f4f6f9;
            --text: #334155;
            --white: #ffffff;
            --border: #e2e8f0;
            --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);

            /* Estados */
            --success-bg: #dcfce7;
            --success-txt: #166534;
            --warning-bg: #fef3c7;
            --warning-txt: #92400e;
            --danger-bg: #fee2e2;
            --danger-txt: #991b1b;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', system-ui, sans-serif;
        }

        body {
            background-color: var(--bg);
            color: var(--text);
            line-height: 1.5;
            display: flex;
            min-height: 100vh;
            margin: 0.5cm;
        }

        /* ===== LAYOUT & SIDEBAR ===== */
        .container-fluid {
            display: flex;
            flex-grow: 1;
            gap: 20px;
            width: 100%;
        }

        .navbar-vertical {
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            width: 230px;
            padding: 20px;
            color: var(--white);
            display: flex;
            flex-direction: column;
            border-radius: 12px;
            height: fit-content;
            min-height: 80vh;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            transition: 0.3s;
            z-index: 999;
        }

        .nav-link {
            display: flex;
            align-items: center;
            color: var(--white);
            text-decoration: none;
            padding: 12px 15px;
            margin-bottom: 5px;
            border-radius: 8px;
            transition: 0.2s;
            font-size: 0.95rem;
        }

        .nav-link:hover {
            background: rgba(255, 255, 255, 0.2);
            transform: translateX(3px);
        }

        .nav-link.active {
            background: rgba(255, 255, 255, 0.3);
            font-weight: 600;
            border-left: 4px solid #fff;
        }

        .nav-link i {
            width: 25px;
            text-align: center;
            margin-right: 10px;
        }

        /* ===== CONTENIDO ===== */
        .main-content {
            flex-grow: 1;
            background: var(--white);
            border-radius: 15px;
            padding: 30px;
            box-shadow: var(--shadow);
            width: 100%;
            overflow-x: hidden;
        }

        h1 {
            color: var(--primary);
            text-align: center;
            margin-bottom: 25px;
            font-size: 1.8rem;
        }

        .logo {
            display: block;
            margin: 0 auto 15px;
            max-width: 140px;
        }

        /* ===== BUSCADOR ===== */
        .search-bar {
            display: flex;
            gap: 10px;
            margin-bottom: 25px;
            background: #fff;
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
        }

        .search-input {
            width: 100%;
            padding: 12px 15px;
            border: 1px solid var(--border);
            border-radius: 10px;
            outline: none;
            transition: 0.3s;
        }

        .search-input:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(106, 90, 205, 0.15);
        }

        /* ===== TABLA PRO ===== */
        .table-container {
            border: 1px solid var(--border);
            border-radius: 10px;
            overflow: hidden;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            font-size: 0.9rem;
        }

        thead th {
            background: #f8fafc;
            color: var(--primary);
            text-transform: uppercase;
            font-size: 0.75rem;
            font-weight: 700;
            padding: 15px;
            text-align: left;
            border-bottom: 2px solid var(--border);
        }

        tbody td {
            padding: 12px 15px;
            border-bottom: 1px solid var(--border);
            vertical-align: middle;
        }

        /* IMAGENES MEJORADAS */
        .img-wrapper {
            width: 60px;
            height: 60px;
            position: relative;
        }

        .product-img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 8px;
            border: 1px solid #ddd;
            transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            background: #fff;
            cursor: zoom-in;
        }

        /* Efecto Zoom Hover */
        .product-img:hover {
            transform: scale(2.5);
            z-index: 100;
            position: absolute;
            top: 0;
            left: 0;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
            border-color: var(--primary);
        }

        /* ===== SUB-TABLA (VARIANTES) ===== */
        .variant-row {
            display: none;
            background: #f8fafc;
        }

        .variant-box {
            padding: 15px;
            margin: 10px 20px;
            background: #fff;
            border-radius: 8px;
            border: 1px solid var(--border);
            box-shadow: inset 0 2px 4px rgba(0, 0, 0, 0.02);
        }

        .variant-table th {
            background: transparent;
            color: #64748b;
            padding: 8px;
            border-bottom: 1px solid #eee;
        }

        .variant-table td {
            padding: 8px;
            border-bottom: 1px solid #f1f5f9;
        }

        /* ===== BADGES & BOTONES ===== */
        .badge {
            padding: 4px 10px;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 700;
        }

        .bg-ok {
            background: var(--success-bg);
            color: var(--success-txt);
        }

        .bg-low {
            background: var(--warning-bg);
            color: var(--warning-txt);
        }

        .bg-crit {
            background: var(--danger-bg);
            color: var(--danger-txt);
        }

        .actions-cell {
            display: flex;
            gap: 8px;
            justify-content: flex-end;
        }

        .btn-icon {
            width: 34px;
            height: 34px;
            border-radius: 8px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border: 1px solid var(--border);
            background: #fff;
            color: var(--text);
            cursor: pointer;
            transition: 0.2s;
            text-decoration: none;
        }

        .btn-icon:hover {
            transform: translateY(-2px);
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .btn-toggle:hover {
            background: var(--primary);
            color: #fff;
            border-color: var(--primary);
        }

        .btn-edit {
            color: var(--primary);
            border-color: #e0e7ff;
            background: #e0e7ff;
        }

        .btn-edit:hover {
            background: var(--primary);
            color: white;
            border-color: var(--primary);
        }

        /* ===== PAGINACIÓN ===== */
        .pagination {
            display: flex;
            justify-content: center;
            gap: 5px;
            margin-top: 20px;
        }

        .page-btn {
            padding: 8px 12px;
            border: 1px solid var(--border);
            background: #fff;
            border-radius: 6px;
            cursor: pointer;
            transition: 0.2s;
        }

        .page-btn.active {
            background: var(--primary);
            color: #fff;
            border-color: var(--primary);
        }

        /* ===== RESPONSIVE ===== */
        .mobile-menu-toggle {
            display: none;
            position: fixed;
            top: 15px;
            right: 15px;
            z-index: 1000;
            background: var(--primary);
            color: #fff;
            border: none;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        }

        .overlay {
            display: none;
            position: fixed;
            inset: 0;
            background: rgba(0, 0, 0, 0.5);
            z-index: 998;
        }

        @media (max-width: 768px) {
            body {
                margin: 0.2cm;
            }

            .container-fluid {
                flex-direction: column;
            }

            .mobile-menu-toggle {
                display: block;
            }

            .navbar-vertical {
                position: fixed;
                left: -260px;
                top: 0;
                bottom: 0;
                height: 100vh;
                overflow-y: auto;
            }

            .navbar-vertical.active {
                left: 0;
            }

            .overlay.active {
                display: block;
            }

            .main-content {
                margin-top: 50px;
                padding: 15px;
            }

            .table-container {
                overflow-x: auto;
            }

            th,
            td {
                min-width: 100px;
            }
        }
    </style>
</head>

<body>
    <button class="mobile-menu-toggle"><i class="fas fa-bars"></i></button>
    <div class="overlay"></div>

    <div class="container-fluid">
        <nav class="navbar-vertical">
            <div style="text-align:center; font-size:1.4em; font-weight:bold; margin-bottom:25px;">Inventario Botitas
            </div>
            <ul style="list-style:none; flex-grow:1;">
                <li><a href="/inventario/agregar" class="nav-link"><i class="fas fa-box-open"></i> Re-stock</a></li>
                <li><a href="/crearProducto/verTodos" class="nav-link active"><i class="fas fa-list"></i> Ver
                        Productos</a></li>
                <li><a href="/crearProducto/crear" class="nav-link"><i class="fas fa-plus"></i> Crear Producto</a></li>
                <li><a href="/stock" class="nav-link"><i class="fas fa-barcode"></i> Buscador QR</a></li>
                <li><a href="/admin-dashboard" class="nav-link"><i class="fas fa-arrow-left"></i> Regresar</a></li>
            </ul>
        </nav>

        <main class="main-content">
            <img src="/imagenes/logo botitas.png" class="logo" alt="Logo">
            <h1>Inventario General</h1>

            <div class="search-bar">
                <input type="text" id="searchInput" class="search-input"
                    placeholder="Buscar por código, nombre o tipo...">
            </div>

            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th width="80">Foto</th>
                            <th>Código</th>
                            <th>Producto</th>
                            <th>Tipo / Género</th>
                            <th>Stock Total</th>
                            <th>Estado</th>
                            <th style="text-align:right;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="inventoryBody">
                    </tbody>
                </table>
            </div>

            <div class="pagination" id="pagination"></div>
        </main>
    </div>

    <script>
        // DATA
        const productos = JSON.parse(`<%- JSON.stringify(productos || []).replace(/</g, '\\u003c') %>`);
        let currentData = [...productos];
        const rowsPerPage = 15;
        let currentPage = 1;

        // ESTADO STOCK
        const getStockStatus = (total) => {
            if (total === 0) return { class: 'bg-crit', text: 'AGOTADO' };
            if (total < 5) return { class: 'bg-low', text: 'BAJO' };
            return { class: 'bg-ok', text: 'NORMAL' };
        };

        // RENDER TABLA
        function renderTable(page) {
            const tbody = document.getElementById('inventoryBody');
            tbody.innerHTML = '';

            const start = (page - 1) * rowsPerPage;
            const slice = currentData.slice(start, start + rowsPerPage);

            if (slice.length === 0) {
                tbody.innerHTML = '<tr><td colspan="7" style="text-align:center; padding:20px;">No se encontraron resultados.</td></tr>';
                return;
            }

            slice.forEach(p => {
                const status = getStockStatus(Number(p.TotalStock || 0));
                const foto = p.Foto || '/imagenes/no-image.png';

                // Fila Principal
                const tr = document.createElement('tr');
                tr.innerHTML = `
                    <td>
                        <div class="img-wrapper">
                            <img src="${foto}" class="product-img" alt="Prod">
                        </div>
                    </td>
                    <td style="font-weight:bold; color:var(--primary); font-family:monospace; font-size:1rem;">${p.Codigo}</td>
                    <td style="font-weight:600;">${p.Nombre}</td>
                    <td><small style="color:#64748b;">${p.Tipo || '-'} / ${p.Genero || '-'}</small></td>
                    <td style="font-weight:bold; font-size:1.1rem;">${p.TotalStock || 0}</td>
                    <td><span class="badge ${status.class}">${status.text}</span></td>
                    <td style="text-align:right;">
                        <div class="actions-cell">
                            <button class="btn-icon btn-toggle" onclick="toggleVariants('${p.Codigo}')" title="Ver Variantes">
                                <i class="fas fa-chevron-down"></i>
                            </button>
                            <a href="/crearProducto/editar/${p.Codigo}" class="btn-icon btn-edit" title="Editar Producto">
                                <i class="fas fa-pen"></i>
                            </a>
                        </div>
                    </td>
                `;
                tbody.appendChild(tr);

                // Fila Variantes (Oculta)
                const trVar = document.createElement('tr');
                trVar.id = `var-${p.Codigo}`;
                trVar.className = 'variant-row';

                let varRows = '';
                if (p.Variantes && p.Variantes.length > 0) {
                    p.Variantes.forEach(v => {
                        varRows += `
                            <tr>
                                <td><b>${v.Talla}</b></td>
                                <td>${v.Color || '-'}</td>
                                <td>${v.Material || '-'}</td>
                                <td><i class="fas fa-map-marker-alt" style="color:#94a3b8"></i> ${v.Ubicacion || '-'}</td>
                                <td><b>${v.Stock}</b></td>
                            </tr>
                        `;
                    });
                } else {
                    varRows = '<tr><td colspan="5" style="text-align:center; font-style:italic;">Sin variantes registradas</td></tr>';
                }

                trVar.innerHTML = `
                    <td colspan="7" style="padding:0;">
                        <div class="variant-box">
                            <h5 style="color:var(--primary); margin-bottom:10px;">Variantes de ${p.Nombre}</h5>
                            <table class="variant-table" style="width:100%;">
                                <thead>
                                    <tr><th>Talla</th><th>Color</th><th>Material</th><th>Ubicación</th><th>Stock</th></tr>
                                </thead>
                                <tbody>${varRows}</tbody>
                            </table>
                        </div>
                    </td>
                `;
                tbody.appendChild(trVar);
            });

            renderPagination();
        }

        // TOGGLE VARIANTES
        window.toggleVariants = (code) => {
            const row = document.getElementById(`var-${code}`);
            if (row) row.style.display = (row.style.display === 'table-row') ? 'none' : 'table-row';
        };

        // PAGINACIÓN
        function renderPagination() {
            const container = document.getElementById('pagination');
            container.innerHTML = '';
            const pages = Math.ceil(currentData.length / rowsPerPage);
            if (pages <= 1) return;

            for (let i = 1; i <= pages; i++) {
                const btn = document.createElement('button');
                btn.textContent = i;
                btn.className = `page-btn ${i === currentPage ? 'active' : ''}`;
                btn.onclick = () => { currentPage = i; renderTable(i); };
                container.appendChild(btn);
            }
        }

        // BÚSQUEDA
        document.getElementById('searchInput').addEventListener('input', (e) => {
            const term = e.target.value.toLowerCase();
            currentData = productos.filter(p =>
                p.Nombre.toLowerCase().includes(term) ||
                p.Codigo.toLowerCase().includes(term) ||
                (p.Tipo && p.Tipo.toLowerCase().includes(term))
            );
            currentPage = 1;
            renderTable(1);
        });

        // SIDEBAR
        const menuBtn = document.querySelector('.mobile-menu-toggle');
        const sidebar = document.querySelector('.navbar-vertical');
        const overlay = document.querySelector('.overlay');

        const toggleMenu = () => {
            sidebar.classList.toggle('active');
            overlay.classList.toggle('active');
        };

        menuBtn.addEventListener('click', toggleMenu);
        overlay.addEventListener('click', toggleMenu);

        // INIT
        renderTable(1);
    </script>
</body>

</html>