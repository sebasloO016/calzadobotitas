<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Re-stock Producto - Botitas</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <style>
        /* ================= ESTILOS PRO + ADN ================= */
        :root {
            --primary-color: #6a5acd;
            --secondary-color: #7b68ee;
            --background-color: #f4f6f9;
            --text-color: #334155;
            --white: #ffffff;
            --danger-color: #ef4444;
            --success-color: #10b981;
            --warning-color: #f59e0b;
            --border-color: #e2e8f0;
            --input-bg: #f8fafc;
            --card-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', system-ui, sans-serif;
        }

        body {
            background-color: var(--background-color);
            color: var(--text-color);
            line-height: 1.6;
            display: flex;
            min-height: 100vh;
            margin: 0.5cm;
            position: relative;
        }

        /* ===== LAYOUT ===== */
        .container-fluid {
            display: flex;
            flex-grow: 1;
            gap: 20px;
            width: 100%;
        }

        /* ===== SIDEBAR & NAV ===== */
        .mobile-menu-toggle {
            display: none;
            position: fixed;
            top: 15px;
            right: 15px;
            z-index: 1000;
            background: var(--primary-color);
            border: none;
            color: var(--white);
            width: 40px;
            height: 40px;
            border-radius: 50%;
            cursor: pointer;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            transition: transform 0.2s;
        }

        .mobile-menu-toggle:hover {
            transform: scale(1.05);
        }

        .overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.5);
            z-index: 998;
            backdrop-filter: blur(2px);
        }

        .navbar-vertical {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            width: 230px;
            padding: 20px;
            color: var(--white);
            display: flex;
            flex-direction: column;
            border-radius: 12px;
            transition: all 0.3s ease;
            z-index: 999;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            height: fit-content;
            min-height: 80vh;
        }

        .nav-header {
            text-align: center;
            font-size: 1.4em;
            margin-bottom: 25px;
            font-weight: bold;
            letter-spacing: 0.5px;
        }

        .nav-menu {
            list-style: none;
            flex-grow: 1;
        }

        .nav-link {
            display: flex;
            align-items: center;
            color: var(--white);
            text-decoration: none;
            padding: 12px 15px;
            margin-bottom: 10px;
            border-radius: 8px;
            background-color: rgba(255, 255, 255, 0.1);
            transition: all 0.3s ease;
            font-size: 0.95em;
        }

        .nav-link i {
            margin-right: 12px;
            width: 22px;
            text-align: center;
            font-size: 1.1em;
        }

        .nav-link:hover {
            background-color: rgba(255, 255, 255, 0.2);
            transform: translateX(5px);
        }

        .nav-link.active {
            background-color: rgba(255, 255, 255, 0.3);
            font-weight: 600;
            border-left: 4px solid #fff;
        }

        /* ===== MAIN CONTENT ===== */
        .main-content {
            flex-grow: 1;
            background-color: var(--white);
            border-radius: 15px;
            padding: 30px;
            overflow-x: hidden;
            width: 100%;
            box-shadow: 0 15px 40px rgba(0, 0, 0, .05);
        }

        .logo {
            max-width: 150px;
            display: block;
            margin: 0 auto 15px;
        }

        h1 {
            color: var(--primary-color);
            margin-bottom: 25px;
            font-size: 1.8rem;
            text-align: center;
        }

        /* ===== SECCIONES DEL FORMULARIO ===== */
        .form-section {
            background: white;
            border: 1px solid var(--border-color);
            border-radius: 12px;
            padding: 25px;
            margin-bottom: 25px;
            box-shadow: var(--card-shadow);
            animation: fadeIn 0.3s ease;
        }

        .form-section h3 {
            font-size: 1.1rem;
            color: var(--primary-color);
            margin-bottom: 20px;
            border-bottom: 2px solid #f1f5f9;
            padding-bottom: 10px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            font-size: 0.9rem;
            color: #475569;
        }

        .form-control {
            width: 100%;
            padding: 12px;
            border: 1px solid #cbd5e1;
            border-radius: 10px;
            background: var(--input-bg);
            font-size: 0.95rem;
            transition: all 0.3s;
        }

        .form-control:focus {
            background: #fff;
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(106, 90, 205, 0.15);
            outline: none;
        }

        /* BUSCADOR AUTOCOMPLETE */
        .search-container {
            position: relative;
        }

        .autocomplete-box {
            position: absolute;
            top: 105%;
            left: 0;
            right: 0;
            background: white;
            border: 1px solid var(--border-color);
            border-radius: 10px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            max-height: 250px;
            overflow-y: auto;
            z-index: 100;
            display: none;
            /* Oculto por defecto */
        }

        .autocomplete-item {
            padding: 12px 15px;
            border-bottom: 1px solid #f1f5f9;
            cursor: pointer;
            transition: 0.2s;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .autocomplete-item:hover {
            background: #f8fafc;
        }

        /* Highlight producto seleccionado */
        .selected-product-info {
            background: #e0e7ff;
            color: var(--primary-color);
            padding: 10px 15px;
            border-radius: 8px;
            font-weight: 600;
            margin-top: 10px;
            display: none;
            border: 1px solid #c7d2fe;
        }

        /* GRID PARA VARIANTES */
        .variant-row {
            display: grid;
            grid-template-columns: 2fr 1fr;
            gap: 15px;
            padding: 15px;
            background: #f8fafc;
            border: 1px solid #e2e8f0;
            border-radius: 10px;
            margin-bottom: 10px;
            align-items: center;
        }

        .variant-info {
            display: flex;
            flex-direction: column;
        }

        .variant-info strong {
            color: var(--text-color);
            font-size: 1rem;
        }

        .variant-info small {
            color: #64748b;
            font-size: 0.85rem;
        }

        /* GRID GENERAL */
        .grid-2 {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
        }

        /* BOTONES */
        .btn {
            border: none;
            padding: 12px 24px;
            border-radius: 10px;
            cursor: pointer;
            font-weight: 600;
            font-size: 1rem;
            transition: 0.2s;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

        .btn-success {
            background: linear-gradient(135deg, var(--success-color), #059669);
            color: white;
            width: 100%;
            box-shadow: 0 4px 6px rgba(16, 185, 129, 0.2);
        }

        .btn-success:hover {
            transform: translateY(-2px);
            opacity: 0.95;
        }

        .btn-secondary {
            background: white;
            border: 1px solid #cbd5e1;
            color: #475569;
            padding: 10px 20px;
            font-size: 0.9rem;
        }

        .btn-secondary:hover {
            background: #f1f5f9;
        }

        /* ALERTAS */
        .alert {
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 20px;
            font-weight: 500;
            display: none;
        }

        .alert-error {
            background: #fee2e2;
            color: #991b1b;
            border: 1px solid #fecaca;
        }

        .alert-success {
            background: #dcfce7;
            color: #166534;
            border: 1px solid #bbf7d0;
        }

        /* ANIMACIONES */
        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* RESPONSIVE */
        @media (max-width: 768px) {
            body {
                margin: 0.2cm;
            }

            .container-fluid {
                flex-direction: column;
            }

            .mobile-menu-toggle {
                display: block;
            }

            .navbar-vertical {
                position: fixed;
                left: -260px;
                top: 0;
                bottom: 0;
                margin: 10px;
                height: calc(100vh - 20px);
                overflow-y: auto;
            }

            .navbar-vertical.active {
                left: 0;
            }

            .overlay.active {
                display: block;
            }

            .main-content {
                margin-top: 50px;
                padding: 15px;
            }

            .grid-2 {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>

<body>
    <button class="mobile-menu-toggle"><i class="fas fa-bars"></i></button>
    <div class="overlay"></div>

    <div class="container-fluid">
        <nav class="navbar-vertical">
            <div class="nav-header">Inventario Botitas</div>
            <ul class="nav-menu">
                <li><a href="/inventario/agregar" class="nav-link active"><i class="fas fa-box-open"></i> Re-stock
                        Producto</a></li>
                <li><a href="/crearProducto/verTodos" class="nav-link"><i class="fas fa-list"></i> Ver Productos</a>
                </li>
                <li><a href="/crearProducto/crear" class="nav-link"><i class="fas fa-plus"></i> Crear Producto</a></li>
                <li><a href="/stock" class="nav-link"><i class="fas fa-barcode"></i> Buscar por Código</a></li>
                <li><a href="/inventario" class="nav-link"><i class="fas fa-clipboard-list"></i> Ver Inventario</a></li>
                <li><a href="/admin-dashboard" class="nav-link"><i class="fas fa-arrow-left"></i> Regresar</a></li>
            </ul>
        </nav>

        <main class="main-content">
            <img src="/imagenes/logo botitas.png" class="logo" alt="Logo Botitas">
            <h1>Re-stock de Producto</h1>

            <div id="alert-message" class="alert"></div>

            <form id="restockForm">

                <div class="form-section">
                    <h3><i class="fas fa-search"></i> Buscar Producto</h3>
                    <div class="search-container">
                        <label class="form-label">Código o Nombre</label>
                        <input type="text" id="codigo" class="form-control"
                            placeholder="Escribe para buscar (Ej: 911)..." autocomplete="off">
                        <div id="autocompleteList" class="autocomplete-box"></div>
                    </div>

                    <div id="productoInfo" class="selected-product-info">
                        <i class="fas fa-check-circle"></i> <span id="prodNombre"></span>
                    </div>
                </div>

                <div class="form-section" id="variantesSection" style="display:none; animation: fadeIn 0.4s ease;">
                    <h3><i class="fas fa-layer-group"></i> Ingresar Stock a Variantes</h3>
                    <p style="color:#64748b; font-size:0.9rem; margin-bottom:15px;">Ingresa la cantidad que llegó para
                        cada talla correspondiente.</p>

                    <div id="variantesContainer">
                    </div>
                </div>

                <div class="form-section" id="nuevaVarianteSection" style="display:none; animation: fadeIn 0.5s ease;">
                    <h3><i class="fas fa-plus-circle"></i> ¿Agregar Nueva Variante?</h3>
                    <div class="grid-2">
                        <div>
                            <select id="newTalla" class="form-control">
                                <option value="">Seleccione Talla</option>
                                <% tallas.forEach(t=> { %>
                                    <option value="<%= t.TallaID %>">
                                        <%= t.Valor %>
                                    </option>
                                    <% }) %>
                            </select>
                        </div>
                        <div>
                            <select id="newColor" class="form-control">
                                <option value="">Seleccione Color</option>
                                <% colores.forEach(c=> { %>
                                    <option value="<%= c.ColorID %>">
                                        <%= c.Nombre %>
                                    </option>
                                    <% }) %>
                            </select>
                        </div>
                        <div>
                            <select id="newMaterial" class="form-control">
                                <option value="">Seleccione Material</option>
                                <% materiales.forEach(m=> { %>
                                    <option value="<%= m.MaterialID %>">
                                        <%= m.Nombre %>
                                    </option>
                                    <% }) %>
                            </select>
                        </div>
                        <div>
                            <input type="number" id="newCantidad" class="form-control" placeholder="Cantidad Inicial">
                        </div>
                        <div>
                            <input type="number" step="0.01" id="newCostoVariante" class="form-control"
                                placeholder="Costo Base ($)">
                        </div>
                        <div>
                            <button type="button" class="btn btn-secondary" onclick="agregarNuevaVariante()"
                                style="width:100%;">
                                <i class="fas fa-plus"></i> Agregar Variante
                            </button>
                        </div>
                    </div>
                </div>

                <div class="form-section">
                    <h3><i class="fas fa-file-invoice-dollar"></i> Datos de la Compra</h3>
                    <div class="grid-2">
                        <div>
                            <label class="form-label">N° Factura Proveedor</label>
                            <input type="text" id="factura" class="form-control" placeholder="Ej: 001-002-12345">
                        </div>
                        <div>
                            <label class="form-label">Proveedor</label>
                            <select id="proveedor" class="form-control">
                                <% proveedores.forEach(p=> { %>
                                    <option value="<%= p.ProveedorID %>">
                                        <%= p.Nombre %>
                                    </option>
                                    <% }) %>
                            </select>
                        </div>
                        <div style="grid-column: span 2;">
                            <label class="form-label">Costo Unitario de Re-stock ($)</label>
                            <input type="number" step="0.01" id="costoRestock" class="form-control"
                                placeholder="Costo aplicado a este ingreso">
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-success" style="padding: 15px; font-size: 1.1rem;">
                    <i class="fas fa-save"></i> REGISTRAR INGRESO AL INVENTARIO
                </button>

            </form>
        </main>
    </div>

    <script>
        // --- Sidebar Logic ---
        const menuToggle = document.querySelector('.mobile-menu-toggle');
        const sidebar = document.querySelector('.navbar-vertical');
        const overlay = document.querySelector('.overlay');

        menuToggle.addEventListener('click', () => {
            sidebar.classList.toggle('active');
            overlay.classList.toggle('active');
        });

        overlay.addEventListener('click', () => {
            sidebar.classList.remove('active');
            overlay.classList.remove('active');
        });

        // --- LÓGICA RE-STOCK ---
        let productoSeleccionado = null;
        let variantesSeleccionadas = [];

        // BUSCADOR AUTOCOMPLETE
        const inputCodigo = document.getElementById('codigo');
        const listContainer = document.getElementById('autocompleteList');
        let timeout;

        inputCodigo.addEventListener('input', (e) => {
            const val = e.target.value.trim();
            clearTimeout(timeout);

            if (val.length < 2) {
                listContainer.style.display = 'none';
                return;
            }

            timeout = setTimeout(async () => {
                try {
                    const res = await fetch(`/inventario/autocomplete?texto=${val}`);
                    const data = await res.json();

                    listContainer.innerHTML = '';
                    if (data.length > 0) {
                        listContainer.style.display = 'block';
                        data.forEach(p => {
                            const item = document.createElement('div');
                            item.className = 'autocomplete-item';
                            item.innerHTML = `
                                <img src="${p.Foto || '/imagenes/no-image.png'}" style="width:40px;height:40px;border-radius:4px;object-fit:cover;">
                                <div>
                                    <div style="font-weight:bold; color:var(--primary-color);">${p.Codigo}</div>
                                    <div style="font-size:0.85rem; color:#64748b;">${p.Nombre}</div>
                                </div>
                            `;
                            item.onclick = () => seleccionarProducto(p);
                            listContainer.appendChild(item);
                        });
                    } else {
                        listContainer.style.display = 'none';
                    }
                } catch (err) { console.error(err); }
            }, 300);
        });

        // Cerrar al clickear fuera
        document.addEventListener('click', (e) => {
            if (!listContainer.contains(e.target) && e.target !== inputCodigo) {
                listContainer.style.display = 'none';
            }
        });

        async function seleccionarProducto(p) {
            productoSeleccionado = p;
            inputCodigo.value = p.Codigo; // Mostrar código en input
            listContainer.style.display = 'none';

            // Mostrar feedback visual
            document.getElementById('productoInfo').style.display = 'block';
            document.getElementById('prodNombre').textContent = `${p.Codigo} - ${p.Nombre}`;

            // Mostrar secciones
            document.getElementById('variantesSection').style.display = 'block';
            document.getElementById('nuevaVarianteSection').style.display = 'block';

            // Cargar variantes
            const container = document.getElementById('variantesContainer');
            container.innerHTML = '<div style="text-align:center; color:#64748b;"><i class="fas fa-spinner fa-spin"></i> Cargando variantes...</div>';

            try {
                const res = await fetch(`/inventario/variantes/${p.Codigo}`);
                const variantes = await res.json();
                container.innerHTML = '';

                if (variantes.length === 0) {
                    container.innerHTML = '<div style="padding:15px; text-align:center; color:#64748b;">No hay variantes registradas. Agrega una nueva abajo.</div>';
                } else {
                    variantes.forEach(v => {
                        const div = document.createElement('div');
                        div.className = 'variant-row';
                        div.innerHTML = `
                            <div class="variant-info">
                                <strong>Talla: ${v.Talla}</strong>
                                <small>${v.Color || '-'} | ${v.Material || '-'} | Stock actual: ${v.Stock}</small>
                            </div>
                            <input type="number" min="1" class="form-control" 
                                data-variante="${v.VarianteID}" 
                                placeholder="+ Cantidad" style="text-align:center; font-weight:bold;">
                        `;
                        container.appendChild(div);
                    });
                }
            } catch (err) {
                container.innerHTML = '<p style="color:red;">Error al cargar variantes</p>';
            }
        }

        function agregarNuevaVariante() {
            // Lógica para interfaz visual de agregar nueva variante (si se requiere enviar en el mismo submit)
            // Por ahora, solo validación visual ya que el backend original parece manejar solo restock de existentes aquí
            // Si tu backend soporta creación al vuelo, aquí iría la lógica.
            // Dejaré la alerta original del usuario:
            alert("Funcionalidad de agregar nueva variante en desarrollo. Por favor usa 'Crear Producto' para nuevas tallas por ahora.");
        }

        // SUBMIT FORM
        document.getElementById('restockForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            if (!productoSeleccionado) return alert("Selecciona un producto primero");

            const variantesAEnviar = [];
            const costo = Number(document.getElementById('costoRestock').value) || 0;

            // Recolectar inputs de variantes existentes
            document.querySelectorAll('input[data-variante]').forEach(input => {
                const cant = Number(input.value);
                if (cant > 0) {
                    variantesAEnviar.push({
                        VarianteID: Number(input.dataset.variante),
                        Cantidad: cant,
                        CostoUnitario: costo
                    });
                }
            });

            if (variantesAEnviar.length === 0) {
                return alert("Ingresa cantidad en al menos una variante.");
            }

            const btn = e.target.querySelector('button[type="submit"]');
            btn.disabled = true;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Procesando...';

            const payload = {
                ProveedorID: Number(document.getElementById('proveedor').value),
                NumeroFactura: document.getElementById('factura').value,
                Codigo: productoSeleccionado.Codigo,
                variantes: variantesAEnviar
            };

            try {
                const res = await fetch('/inventario/restock', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });
                const result = await res.json();

                if (res.ok) {
                    const alertBox = document.getElementById('alert-message');
                    alertBox.className = 'alert alert-success';
                    alertBox.textContent = '✅ Re-stock registrado correctamente';
                    alertBox.style.display = 'block';
                    setTimeout(() => location.reload(), 1500);
                } else {
                    alert('❌ Error: ' + result.error);
                    btn.disabled = false;
                    btn.innerHTML = 'REGISTRAR INGRESO AL INVENTARIO';
                }
            } catch (err) {
                console.error(err);
                alert("Error de conexión");
                btn.disabled = false;
                btn.innerHTML = 'REGISTRAR INGRESO AL INVENTARIO';
            }
        });
    </script>
</body>

</html>