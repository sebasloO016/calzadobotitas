<body>
    <button class="mobile-menu-toggle"><i class="fas fa-bars"></i></button>
    <div class="overlay"></div>

    <div class="container-fluid">
        <nav class="navbar-vertical">
            <div class="nav-header">Inventario Botitas</div>
            <ul class="nav-menu">
                <li><a href="/inventario/agregar" class="nav-link"><i class="fas fa-box-open"></i> Re-stock</a></li>
                <li><a href="/stock" class="nav-link active"><i class="fas fa-barcode"></i> Stock / QR</a></li>
                <li><a href="/inventario" class="nav-link"><i class="fas fa-box-open"></i> Inventario</a></li>
                <li><a href="/admin-dashboard" class="nav-link"><i class="fas fa-arrow-left"></i> Regresar</a></li>
            </ul>
        </nav>

        <main class="main-content">
            <img src="/imagenes/logo botitas.png" class="logo">
            <h1>Stock y Ubicaci√≥n</h1>

            <!-- BUSCADOR -->
            <div style="max-width:520px;margin-bottom:20px;">
                <input type="text" id="busqueda" class="search-input"
                    placeholder="Escanea QR o escribe c√≥digo (ej: 912)" autocomplete="off">
                <div id="resultados" class="suggestions-box"></div>
            </div>

            <% if (error) { %>
                <p style="color:red;">
                    <%= error %>
                </p>
                <% } %>

                    <% if (producto) { %>
                        <div class="product-info">
                            <h3>
                                <%= producto.Nombre %> (<%= producto.Codigo %>)
                            </h3>

                            <% if (producto.Foto) { %>
                                <img src="<%= producto.Foto %>"
                                    style="width:140px;height:140px;object-fit:cover;border-radius:10px;">
                                <% } %>

                                    <p><strong>Precio:</strong> $<%= producto.Precio %>
                                    </p>

                                    <h4 style="margin-top:20px;">Variantes disponibles</h4>

                                    <table class="tallas-table">
                                        <thead>
                                            <tr>
                                                <th>Talla</th>
                                                <th>Color</th>
                                                <th>Material</th>
                                                <th>Ubicaci√≥n</th>
                                                <th>Stock</th>
                                                <th>QR</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% variantes.forEach(v=> { %>
                                                <tr>
                                                    <td>
                                                        <%= v.Talla || '-' %>
                                                    </td>
                                                    <td>
                                                        <%= v.Color || '-' %>
                                                    </td>
                                                    <td>
                                                        <%= v.Material || '-' %>
                                                    </td>
                                                    <td>
                                                        <%= v.Ubicacion || 'No asignada' %>
                                                    </td>
                                                    <td><strong>
                                                            <%= v.Stock %>
                                                        </strong></td>
                                                    <td>
                                                        <a href="/stock/qr/<%= v.QrCode %>" class="btn btn-secondary">
                                                            Ver
                                                        </a>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                        </tbody>
                                    </table>
                        </div>
                        <% } %>
        </main>
    </div>

    <script>
        const input = document.getElementById('busqueda');
        const box = document.getElementById('resultados');
        let t;

        input.addEventListener('input', () => {
            const q = input.value.trim();
            clearTimeout(t);

            if (q.length < 2) {
                box.style.display = 'none';
                return;
            }

            t = setTimeout(() => {
                fetch(`/stock/autocomplete?texto=${encodeURIComponent(q)}`)
                    .then(r => r.json())
                    .then(data => {
                        box.innerHTML = '';
                        if (!data.length) {
                            box.style.display = 'none';
                            return;
                        }

                        data.forEach(p => {
                            const div = document.createElement('div');
                            div.className = 'suggestion-item';
                            div.innerHTML = `
                                <img src="${p.Foto || '/imagenes/no-image.png'}" class="suggestion-img">
                                <div>
                                    <strong>${p.Codigo}</strong><br>
                                    <small>${p.Tipo || ''} ${p.Color || ''} ${p.Ubicacion || ''}</small>
                                </div>
                            `;

                            div.onclick = () => {
                                window.location.href = `/stock/codigo/${p.Codigo}`;
                            };
                            box.appendChild(div);
                        });

                        box.style.display = 'block';
                    });
            }, 250);
        });

        // ENTER ‚Üí b√∫squeda directa
        input.addEventListener('keydown', e => {
            if (e.key === 'Enter') {
                window.location.href = `/stock/codigo/${input.value.trim()}`;
            }
        });

        document.addEventListener('click', e => {
            if (!box.contains(e.target) && e.target !== input)
                box.style.display = 'none';
        });
    </script>
</body>

</html>