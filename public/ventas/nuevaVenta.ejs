<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Nueva Venta - Botitas</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <style>
    :root {
      --primary: #6a5acd;
      --secondary: #7b68ee;
      --bg: #f4f6f9;
      --white: #fff;
      --danger: #dc3545;
      --success: #28a745;
      --text: #333;
    }

    * { margin: 0; padding: 0; box-sizing: border-box; font-family: 'Poppins', sans-serif; }

    body {
      background: var(--bg);
      display: flex;
      min-height: 100vh;
      margin: .5cm;
    }

    .container-fluid {
      display: flex;
      flex-grow: 1;
      gap: 20px;
      width: 100%;
    }

    /* ===== NAVBAR ===== */
    .navbar-vertical {
      background: linear-gradient(135deg, var(--primary), var(--secondary));
      width: 230px;
      padding: 20px;
      color: var(--white);
      border-radius: 15px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
      display: flex;
      flex-direction: column;
    }

    .nav-header { text-align: center; font-weight: 700; margin-bottom: 20px; }

    .nav-link {
      display: flex;
      align-items: center;
      padding: 10px 12px;
      margin-bottom: 10px;
      color: var(--white);
      text-decoration: none;
      border-radius: 8px;
      transition: 0.3s;
      background-color: rgba(255,255,255,0.1);
    }

    .nav-link i { margin-right: 10px; }

    .nav-link:hover { background-color: rgba(255,255,255,0.25); transform: translateX(8px); }
    .nav-link.active { background-color: rgba(255,255,255,0.3); }

    /* ===== MAIN ===== */
    .main-content {
      flex-grow: 1;
      background: var(--white);
      border-radius: 15px;
      padding: 30px 40px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.05);
    }

    h1 {
      color: var(--primary);
      text-align: center;
      margin-bottom: 25px;
    }

    fieldset {
      background: var(--bg);
      border: 1px solid rgba(0,0,0,0.1);
      border-radius: 12px;
      padding: 25px;
      margin-bottom: 25px;
    }

    legend {
      color: var(--primary);
      font-weight: 600;
      padding: 0 10px;
    }

    .form-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(270px, 1fr));
      gap: 20px;
      margin-top: 10px;
    }

    label { font-weight: 500; margin-bottom: 6px; display: block; }
    input, select {
      width: 100%;
      padding: 10px;
      border: 1px solid rgba(0,0,0,0.1);
      border-radius: 10px;
      font-size: 14px;
      transition: border-color 0.3s;
    }

    input:focus, select:focus {
      border-color: var(--primary);
      outline: none;
    }

    .producto {
      background: var(--white);
      border-radius: 10px;
      padding: 15px 20px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.05);
      margin-bottom: 15px;
    }

    .btn {
      border: none;
      border-radius: 8px;
      cursor: pointer;
      font-size: 14px;
      transition: all 0.3s;
      padding: 10px 18px;
    }

    .btn:hover { opacity: 0.9; transform: translateY(-2px); }

    .btn-primary { background: linear-gradient(135deg, var(--primary), var(--secondary)); color: var(--white); }
    .btn-success { background: linear-gradient(135deg, #28a745, #5dd17a); color: var(--white); }
    .btn-danger { background: var(--danger); color: var(--white); }
    .btn-secondary { background: #777; color: var(--white); }

    .acciones {
      display: flex;
      justify-content: center;
      gap: 12px;
      flex-wrap: wrap;
      margin-top: 25px;
    }

    /* === PRODUCTOS === */
    .producto .form-grid { gap: 15px; }
    .producto .btn-danger { width: 100%; }

    /* === RESPONSIVE === */
    @media (max-width: 768px) {
      .container-fluid { flex-direction: column; }
      .navbar-vertical { width: 100%; border-radius: 10px; }
      .main-content { padding: 20px; }
    }
  </style>
</head>
<body>
  <div class="container-fluid">
    <!-- NAVBAR -->
    <nav class="navbar-vertical">
      <div class="nav-header">Panel Botitas</div>
      <ul class="nav-menu">
        <li><a href="/admin-dashboard" class="nav-link"><i class="fas fa-home"></i> Dashboard</a></li>
        <li><a href="/inventario" class="nav-link"><i class="fas fa-boxes"></i> Inventario</a></li>
        <li><a href="/clientes" class="nav-link"><i class="fas fa-users"></i> Clientes</a></li>
        <li><a href="/proveedores" class="nav-link"><i class="fas fa-truck"></i> Proveedores</a></li>
        <li><a href="/ventas/nueva" class="nav-link active"><i class="fas fa-cash-register"></i> Nueva Venta</a></li>
        <li><a href="/ventas/historial" class="nav-link"><i class="fas fa-list"></i> Historial</a></li>
        <li><a href="/logout" class="nav-link"><i class="fas fa-sign-out-alt"></i> Cerrar sesi贸n</a></li>
      </ul>
    </nav>

    <!-- CONTENIDO PRINCIPAL -->
    <main class="main-content">
      <h1>Ь Nueva Venta</h1>

      <form id="ventaForm">
        <!-- DATOS CLIENTE -->
        <fieldset>
          <legend>Datos del Cliente</legend>
          <div class="form-grid">
            <div>
              <label>Tipo de Identificaci贸n</label>
              <select id="tipoIdentificacion" required>
                <option value="">Seleccione...</option>
                <option value="C茅dula">C茅dula</option>
                <option value="RUC">RUC</option>
                <option value="Pasaporte">Pasaporte</option>
              </select>
            </div>
            <div>
              <label>Identificaci贸n</label>
              <div style="display:flex; gap:8px;">
                <input type="text" id="identificacion" required style="flex:1;">
                <button type="button" class="btn btn-primary" id="buscarCliente">Buscar</button>
              </div>
            </div>
            <div><label>Nombre</label><input type="text" id="nombre" required></div>
            <div><label>Celular</label><input type="text" id="celular"></div>
            <div><label>Correo</label><input type="email" id="email"></div>
            <div><label>Direcci贸n</label><input type="text" id="direccion"></div>
          </div>
        </fieldset>

        <!-- DATOS VENTA -->
        <fieldset>
          <legend>Datos de la Venta</legend>
          <div class="form-grid">
            <div>
              <label>Forma de Pago</label>
              <select id="formaDePago" required>
                <option value="">Seleccione...</option>
                <option value="Tarjeta de Cr茅dito">Tarjeta de Cr茅dito</option>
                <option value="Tarjeta de D茅bito">Tarjeta de D茅bito</option>
                <option value="Efectivo/Transferencia">Efectivo/Transferencia</option>
              </select>
            </div>
          </div>
        </fieldset>

        <!-- PRODUCTOS -->
        <fieldset>
          <legend>Productos</legend>
          <div id="productos">
            <div class="producto">
              <div class="form-grid">
                <div>
                  <label>C贸digo</label>
                  <div style="display:flex; gap:8px;">
                    <input type="text" class="codigo" required style="flex:1;">
                    <button type="button" class="btn btn-primary buscarProducto">Buscar</button>
                  </div>
                </div>
                <div><label>Producto</label><input type="text" class="nombreProducto" readonly></div>
                <div><label>Cantidad</label><input type="number" class="cantidad" min="1" required></div>
                <div><label>Precio ($)</label><input type="number" class="precio" min="0" required></div>
                <div><label>Descuento ($)</label><input type="number" class="descuento" value="0"></div>
                <div style="display:flex; align-items:end;">
                  <button type="button" class="btn btn-danger eliminarProducto">Eliminar</button>
                </div>
              </div>
            </div>
          </div>
          <div class="acciones">
            <button type="button" class="btn btn-success" id="agregarProducto">
              <i class="fas fa-plus"></i> Agregar Producto
            </button>
          </div>
        </fieldset>

        <!-- RESUMEN -->
        <fieldset>
          <legend>Resumen</legend>
          <div class="form-grid">
            <div><label>Subtotal</label><input type="text" id="subtotal" readonly></div>
            <div><label>IVA (15%)</label><input type="text" id="iva" readonly></div>
            <div><label>Total</label><input type="text" id="total" readonly></div>
          </div>
        </fieldset>

        <div class="acciones">
          <button type="submit" class="btn btn-primary">
            <i class="fas fa-cash-register"></i> Registrar Venta
          </button>
          <a href="/admin-dashboard" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Cancelar
          </a>
        </div>
      </form>
    </main>
  </div>

  <script>
    $(function() {
      $('#buscarCliente').click(() => {
        const id = $('#identificacion').val().trim();
        if (!id) return alert('Ingrese una identificaci贸n.');
        $.get(`/ventas/buscarCliente/${id}`)
          .done(data => {
            $('#nombre').val(data.Nombre);
            $('#celular').val(data.Celular);
            $('#email').val(data.Email);
            $('#direccion').val(data.Direccion);
          })
          .fail(() => alert('Cliente no encontrado.'));
      });

      $(document).on('click', '.buscarProducto', function() {
        const div = $(this).closest('.producto');
        const codigo = div.find('.codigo').val();
        if (!codigo) return alert('Ingrese un c贸digo de producto.');
        $.get(`/ventas/buscarProducto/${codigo}`)
          .done(data => {
            div.find('.nombreProducto').val(data.Nombre);
            div.find('.precio').val(data.PrecioVenta);
          })
          .fail(() => alert('Producto no encontrado.'));
      });

      $('#agregarProducto').click(() => {
        const nuevo = $('.producto').first().clone();
        nuevo.find('input').val('');
        $('#productos').append(nuevo);
      });

      $(document).on('click', '.eliminarProducto', function() {
        if ($('.producto').length > 1) $(this).closest('.producto').remove();
        calcularTotales();
      });

      $(document).on('input', '.cantidad, .precio, .descuento', calcularTotales);

      function calcularTotales() {
        let subtotal = 0;
        $('.producto').each(function() {
          const cantidad = parseFloat($(this).find('.cantidad').val()) || 0;
          const precio = parseFloat($(this).find('.precio').val()) || 0;
          const descuento = parseFloat($(this).find('.descuento').val()) || 0;
          subtotal += (precio - descuento) * cantidad;
        });
        const iva = subtotal * 0.15;
        const total = subtotal + iva;
        $('#subtotal').val(subtotal.toFixed(2));
        $('#iva').val(iva.toFixed(2));
        $('#total').val(total.toFixed(2));
      }

      $('#ventaForm').submit(function(e) {
        e.preventDefault();
        const cliente = {
          tipoIdentificacion: $('#tipoIdentificacion').val(),
          identificacion: $('#identificacion').val(),
          nombre: $('#nombre').val(),
          celular: $('#celular').val(),
          email: $('#email').val(),
          direccion: $('#direccion').val()
        };
        const formaDePago = $('#formaDePago').val();
        const productos = [];
        $('.producto').each(function() {
          productos.push({
            codigo: $(this).find('.codigo').val(),
            cantidad: parseFloat($(this).find('.cantidad').val()) || 0,
            precio: parseFloat($(this).find('.precio').val()) || 0,
            descuento: parseFloat($(this).find('.descuento').val()) || 0
          });
        });
        $.ajax({
          url: '/ventas/nueva',
          method: 'POST',
          contentType: 'application/json',
          data: JSON.stringify({ cliente, formaDePago, productos }),
          success: res => { alert(res.success); window.location.href = '/ventas/historial'; },
          error: err => alert(err.responseJSON?.error || 'Error al registrar la venta.')
        });
      });
    });
  </script>
</body>
</html>
